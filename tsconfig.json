{
  "compilerOptions":{
     "target":"esnext",
     "module":"esnext",
     "strict":true,
     "jsx":"preserve",
     "moduleResolution":"node",
     "resolveJsonModule": true,
     "experimentalDecorators":true,
     "allowJs":true,
     "skipLibCheck":true,
     "esModuleInterop":true,
     "allowSyntheticDefaultImports":true,
     "forceConsistentCasingInFileNames":true,
     "useDefineForClassFields":true,
     "removeComments": true,
     "sourceMap":true,
     "baseUrl":".",
     "types":[
        "webpack-env"
     ],
     "paths":{
        "@/*":[
           "src/*"
        ]
     },
     "lib":[
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
     ]
  },
  "include":[
     "src/**/*.ts",
     "src/**/*.tsx",
     "src/**/*.vue",
     "tests/**/*.ts",
     "tests/**/*.tsx",
     "src/store/index.ts",
     "src/store/modules/user.ts"  ],
  "exclude":[
     "node_modules"
  ]
}